  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>saileshsp posts</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>


<div class="center jumbotron">
  <h1>Welcome to the Sailesh App</h1>

  <h2>
  this is sailesh's first rails web application
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg  active" %>
</div>


<% end %>